<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-feature android:name="android.hardware.camera.any" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
        android:name=".FloripediaApplication"
        android:allowBackup="true"
        android:icon="@drawable/login_icon"
        android:roundIcon="@drawable/login_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Floripedia"
        android:usesCleartextTraffic="true"
        android:extractNativeLibs="false"
        tools:targetApi="31">
        <activity
            android:name=".ui.home.MainActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.detail.Detail1Activity"
            android:exported="false" />
        <activity android:name=".ui.camera.CameraActivity"/>
        <activity android:name=".ui.auth.LoginActivity"/>
        <activity android:name=".ui.auth.SignUpActivity"/>
        <activity android:name=".ui.bookmark.Bookmark1Activity"/>
        <activity android:name=".ui.bookmark.BookmarkCategoryActivity"/>
        <activity android:name=".ui.browse.Browse2Activity"/>
        <activity android:name=".ui.browse.Browse3Activity"/>
        <activity android:name=".ui.browse.SearchActivity"/>
        <activity android:name=".ui.mypage.MyPageActivity"/>
        <activity android:name=".ui.mypage.ProfileEditActivity"/>
        <activity android:name=".ui.detail.Detail2Activity"/>
    </application>

</manifest>