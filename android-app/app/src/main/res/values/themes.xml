<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Floripedia" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary 계열 -->
        <item name="colorPrimary">@color/button</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/white</item>
        <item name="colorOnPrimaryContainer">@color/button</item>

        <!-- Secondary 계열 -->
        <item name="colorSecondary">@color/button</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/white</item>
        <item name="colorOnSecondaryContainer">@color/button</item>

        <!-- Tertiary 계열 -->
        <item name="colorTertiary">@color/button</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">@color/white</item>
        <item name="colorOnTertiaryContainer">@color/button</item>

        <!-- Surface 계열 -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/text1</item>
        <item name="colorSurfaceVariant">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/sub_text1</item>

        <!-- 기타 -->
        <item name="colorOutline">@color/sub_text1</item>
        <item name="colorError">@color/button</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorErrorContainer">@color/white</item>
        <item name="colorOnErrorContainer">@color/button</item>

        <!-- 상태바 -->
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Ripple/Highlight 색상 투명 처리 -->
        <item name="colorControlHighlight">@android:color/transparent</item>
        <item name="android:colorControlHighlight">@android:color/transparent</item>

        <!-- 하단 네비게이션 선택 배경(Indicator) 색상 -->
        <item name="colorContainer">#E8F5E9</item>

        <!-- PopupMenu 스타일 -->
        <item name="popupMenuStyle">@style/FloripediaPopupMenu</item>
        <item name="android:popupMenuStyle">@style/FloripediaPopupMenu</item>

        <!-- Switch/Checkbox 색상 -->
        <item name="colorControlActivated">@color/button</item>
        <item name="colorControlNormal">@color/sub_text1</item>
        <item name="android:colorControlActivated">@color/button</item>
        <item name="android:colorControlNormal">@color/sub_text1</item>

        <!-- Material3 Switch 색상 -->
        <item name="colorSurfaceContainerHighest">@color/white</item>
        <item name="colorOnSurfaceInverse">@color/button</item>
        <item name="colorPrimaryInverse">@color/button</item>
    </style>

    <!-- PopupMenu 스타일 -->
    <style name="FloripediaPopupMenu" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@color/white</item>
    </style>

    <!-- 하단 네비게이션 전용 인디케이터 모양 (Oval/Pill) -->
    <style name="CustomIndicator" parent="">
        <item name="cornerSize">50%</item> <!-- 완벽한 타원형 -->
    </style>

    <!-- 하단 네비게이션 텍스트 스타일 -->
    <style name="BottomNavText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/pretendardmedium</item>
    </style>

    <style name="CustomTabStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/text1</item>
        <item name="tabTextColor">@color/sub_text1</item>
        <item name="tabRippleColor">@android:color/transparent</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/pretendardsemibold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CircleImageStyle" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedImage20" parent="">
        <item name="cornerSize">20dp</item>
    </style>

    <style name="TopRoundedImage20" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
</resources>