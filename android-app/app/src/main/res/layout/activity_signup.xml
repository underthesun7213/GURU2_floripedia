<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F9F6"
    android:padding="24dp">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/baseline_close_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textColor="@color/text1"
        android:textSize="18sp"
        android:fontFamily="@font/pretendardbold"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnBack" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@id/layoutLoginGuide"
        app:layout_constraintTop_toBottomOf="@id/tvTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivProfileSelect"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_profile_placeholder"
                    android:scaleType="centerCrop"
                    android:background="#D9D9D9"
                    app:shapeAppearanceOverlay="@style/CircleImageStyle" />

                <TextView
                    android:id="@+id/btnProfileAdd"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="bottom|end"
                    android:background="@drawable/bg_circle_iv"
                    android:backgroundTint="@color/button"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:includeFontPadding="false" />
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:fontFamily="@font/pretendardsemibold"
                android:textColor="@color/text1" />

            <EditText
                android:id="@+id/etNickname"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_round_square"
                android:backgroundTint="@color/white"
                android:hint="닉네임"
                android:fontFamily="@font/pretendardmedium"
                android:textColorHint="@color/sub_text1"
                android:paddingHorizontal="16dp"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="이메일"
                android:fontFamily="@font/pretendardsemibold"
                android:textColor="@color/text1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/etId"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_round_square"
                    android:backgroundTint="@color/white"
                    android:hint="example@email.com"
                    android:inputType="textEmailAddress"
                    android:fontFamily="@font/pretendardmedium"
                    android:textColorHint="@color/sub_text1"
                    android:paddingHorizontal="16dp"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCheckId"
                    android:layout_width="wrap_content"
                    android:layout_height="52dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_round_square"
                    android:backgroundTint="#D9D9D9"
                    android:text="중복확인"
                    android:fontFamily="@font/pretendardsemibold"
                    android:textColor="@color/white"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="이메일 형식으로 입력해주세요"
                android:fontFamily="@font/pretendardregular"
                android:textColor="@color/sub_text1"
                android:textSize="11sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="비밀번호"
                android:fontFamily="@font/pretendardsemibold"
                android:textColor="@color/text1" />

            <EditText
                android:id="@+id/etPw"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_round_square"
                android:backgroundTint="@color/white"
                android:hint="비밀번호"
                android:fontFamily="@font/pretendardmedium"
                android:textColorHint="@color/sub_text1"
                android:inputType="textPassword"
                android:paddingHorizontal="16dp"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etPwCheck"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_round_square"
                android:backgroundTint="@color/white"
                android:hint="비밀번호 확인"
                android:fontFamily="@font/pretendardmedium"
                android:textColorHint="@color/sub_text1"
                android:inputType="textPassword"
                android:paddingHorizontal="16dp"
                android:textSize="14sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="6~20자/영문 대문자, 소문자, 숫자, 특수문자 중 2가지 이상 조합"
                android:textColor="@color/sub_text1"
                android:fontFamily="@font/pretendardregular"
                android:textSize="11sp" />

        </LinearLayout>
    </ScrollView>

    <!-- 로그인 가이드 추가 -->
    <LinearLayout
        android:id="@+id/layoutLoginGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/btnSignUp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이미 계정이 있으신가요? "
            android:textColor="@color/sub_text1"
            android:fontFamily="@font/pretendardmedium"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인"
            android:textColor="@color/text1"
            android:textSize="13sp"
            android:textStyle="bold"
            android:fontFamily="@font/pretendardmedium"
            android:background="?attr/selectableItemBackground"
            android:padding="4dp"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/bg_round_square"
        android:backgroundTint="#D9D9D9"
        android:text="가입하기"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/pretendardsemibold"
        app:layout_constraintBottom_toBottomOf="parent"
        android:enabled="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>