<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:clipChildren="false"
    android:clipToPadding="false">

    <!-- 상단 헤더 -->
    <include
        android:id="@+id/fixedHeader"
        layout="@layout/view_header"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/pretendardsemibold"
        android:text="꽃갈피"
        android:textColor="@color/text1"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fixedHeader" />

    <!-- 요약 카드 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/summaryCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/tvTotalCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendardsemibold"
                android:text="총 식물 갯수: 0개"
                android:textColor="@color/bookmark_text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvRecommendedSeasonPlant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/pretendardsemibold"
                android:text="추천 계절 식물: -"
                android:textColor="#4A6750"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 카테고리 그리드 -->
    <GridLayout
        android:id="@+id/gridLayoutCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="100dp"
        android:columnCount="2"
        app:layout_constraintTop_toBottomOf="@id/summaryCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0">

        <!-- 꽃말 카드 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvLanguage"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="20dp">
            <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent">
                <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop" android:src="@drawable/flower_language" />
                <View android:layout_width="match_parent" android:layout_height="match_parent" android:background="#44000000" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center" android:fontFamily="@font/pretendardbold" android:text="꽃말" android:textColor="@color/white" android:textSize="20sp" />
                <ImageView android:layout_width="20dp" android:layout_height="20dp" android:layout_gravity="center_vertical|end" android:layout_marginEnd="16dp" android:src="@drawable/outline_arrow_forward_ios_24" app:tint="@color/white" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- 향기 카드 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvScent"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="20dp">
            <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent">
                <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop" android:src="@drawable/scent" />
                <View android:layout_width="match_parent" android:layout_height="match_parent" android:background="#44000000" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center" android:fontFamily="@font/pretendardbold" android:text="향기" android:textColor="@color/white" android:textSize="20sp" />
                <ImageView android:layout_width="20dp" android:layout_height="20dp" android:layout_gravity="center_vertical|end" android:layout_marginEnd="16dp" android:src="@drawable/outline_arrow_forward_ios_24" app:tint="@color/white" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- 개화시기 카드 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvSeason"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="20dp">
            <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent">
                <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop" android:src="@drawable/season" />
                <View android:layout_width="match_parent" android:layout_height="match_parent" android:background="#44000000" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center" android:fontFamily="@font/pretendardbold" android:text="개화시기" android:textColor="@color/white" android:textSize="20sp" />
                <ImageView android:layout_width="20dp" android:layout_height="20dp" android:layout_gravity="center_vertical|end" android:layout_marginEnd="16dp" android:src="@drawable/outline_arrow_forward_ios_24" app:tint="@color/white" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- 색상 카드 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvColor"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="20dp">
            <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent">
                <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop" android:src="@drawable/hexcode" />
                <View android:layout_width="match_parent" android:layout_height="match_parent" android:background="#44000000" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center" android:fontFamily="@font/pretendardbold" android:text="색상" android:textColor="@color/white" android:textSize="20sp" />
                <ImageView android:layout_width="20dp" android:layout_height="20dp" android:layout_gravity="center_vertical|end" android:layout_marginEnd="16dp" android:src="@drawable/outline_arrow_forward_ios_24" app:tint="@color/white" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>
    </GridLayout>

    <include
        android:id="@+id/bottomNav"
        layout="@layout/view_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
