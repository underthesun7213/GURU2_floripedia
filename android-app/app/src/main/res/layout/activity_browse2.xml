<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:clipChildren="false"
    android:clipToPadding="false">

    <include
        android:id="@+id/fixedHeader"
        layout="@layout/view_header"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/centerContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/inputCard"
        app:layout_constraintTop_toBottomOf="@id/fixedHeader"
        app:layout_constraintVertical_chainStyle="packed">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:src="@drawable/browse_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="당신의 이야기를 들려주세요"
            android:textColor="@color/text1"
            android:textSize="22sp"
            android:fontFamily="@font/pretendardsemibold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="당신의 이야기에 어울리는 식물을 찾아드릴게요"
            android:fontFamily="@font/pretendardsemibold"
            android:textColor="@color/text1"
            android:textSize="14sp" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/inputCard"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:layout_constraintBottom_toTopOf="@+id/btnSearch"
        app:layout_constraintTop_toBottomOf="@id/centerContent">

        <EditText
            android:id="@+id/etUserStoryResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="top"
            android:padding="20dp"
            android:hint="예) 오랜만에 만나는 친구에게 선물할 꽃을 찾고 있어요. 우정과 감사의 의미가 담긴 꽃이면 좋겠어요."
            android:textColorHint="@color/sub_text1"
            android:fontFamily="@font/pretendardmedium"
            android:textColor="@color/text1"
            android:textSize="15sp"
            android:lineSpacingExtra="4dp" />
    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSearch"
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_tag_green"
        android:text="탐색하기"
        android:fontFamily="@font/pretendardsemibold"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:cornerRadius="28dp"
        app:layout_constraintTop_toBottomOf="@id/inputCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 검색 결과 리스트 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSearchResults"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:paddingBottom="90dp"
        android:visibility="gone"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/btnSearch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_available_plant" />

    <!-- 공통 푸터바 적용 -->
    <include
        android:id="@+id/bottomNav"
        layout="@layout/view_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>