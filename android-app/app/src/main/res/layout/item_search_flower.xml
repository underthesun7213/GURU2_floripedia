<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="12dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivSearchFlower"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/freesia1"
            app:shapeAppearanceOverlay="@style/RoundedImage20" /> <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvSearchFlowerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프리지아"
            android:fontFamily="@font/pretendardsemibold"
            android:textColor="@color/text1"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSearchFlowerDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="프리지아는 구근 식물로 봄에 개화하며"
            android:fontFamily="@font/pretendardmedium"
            android:textColor="@color/button"
            android:textSize="13sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginHorizontal="0dp"
            android:background="@drawable/dot_line" />
    </LinearLayout>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/outline_arrow_forward_ios_24"
            app:tint="@color/sub_text1" />
    </LinearLayout>



</LinearLayout>